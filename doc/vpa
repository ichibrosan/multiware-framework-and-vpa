# daphne.goodall.com:/etc/xinetd.d/vpa 2025-02-17 04:39 dwg - :-)

# This service activates an xmlrpc responder to handle an incoming RPC request
service vpa
{
	port		= 5164
	disable     	= no
	id		= vpa
	socket_type	= stream
	protocol	= tcp
	user		= doug
	wait		= no
	server		= /home/doug/public_html/fw/cmake-build-debug/xmlrpc_inetd_server
}

# This service runs a script that starts the virtual protocol adapter daemon
service vpad-start
{
	port 		= 65353
	disable		= no
	id		= vpad-start
	socket_type	= stream
	protocol	= tcp
	user		= doug
	wait		= no
	server		= /home/doug/public_html/fw/scripts/start-vpad.sh
}

# This service runs a script that calls the netstat utility and redirects output to /tmp
service vpa-netstat
{
	port 		= 65354
	disable		= no
	id		= vpa-netstat
	socket_type	= stream
	protocol	= tcp
	user		= doug
	wait		= no
	server		= /home/doug/public_html/fw/scripts/inetd-netstat-redirect.sh
}

# This service runs a script that calls the ip utility and redirects output to /tmp
service vpa-ip
{
	port 		= 65355
	disable		= no
	id		= vpa-ip
	socket_type	= stream
	protocol	= tcp
	user		= doug
	wait		= no
	server		= /home/doug/public_html/fw/scripts/inetd-ip-redirect.sh
}


