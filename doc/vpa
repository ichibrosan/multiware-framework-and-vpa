# daphne.goodall.com:/etc/xinetd.d/vpa 2025-02-19 05:15 dwg - :-)

# This service activates an xmlrpc responder to handle an incoming RPC request
service vpa
{
	port		= 8080
	disable     	= no
	id		= vpa
	socket_type	= stream
	protocol	= tcp
	user		= 1000
	wait		= no
	server		= /opt/xmlrpc-c/examples/cpp/xmlrpc_inetd_server
}

# This service runs a script that starts the virtual protocol adapter daemon
service vpad-start
{
	port 		= 65353
	disable		= no
	id		= vpad-start
	socket_type	= stream
	protocol	= tcp
	user		= 1000
	wait		= no
	server		= /home/devo/public_html/fw/scripts/start-vpad.sh
}

# This service runs a script that calls the netstat utility and redirects output
service vpa-netstat
{
	port 		= 65354
	disable		= no
	id		= vpa-netstat
	socket_type	= stream
	protocol	= tcp
	user		= 1000
	wait		= no
	server		= /home/devo/public_html/fw/scripts/inetd-netstat-redirect.sh
}

