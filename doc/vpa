# this file must be installed in /etc/xinetd.d

service vpad-start
{
	port 		= 65353
	disable		= no
	id		= vpad-start
	socket_type	= stream
	protocol	= tcp
	user		= doug
	wait		= no
	server		= /home/doug/public_html/fw/scripts/start-vpad.sh
}

service vpa
{
	port		= 5164
	disable     	= no
	id		= vpa
	socket_type	= stream
	protocol	= tcp
	user		= doug
	wait		= no
	server		= /home/doug/public_html/fw/cmake-build-debug/xmlrpc_inetd_server
}

# This is the udp version.
service vpa-disc
{
	port		= 5164
	disable		= no
	id		= vpa-disc
	socket_type	= dgram
	protocol	= udp
	user		= doug
	wait		= no
	server		= /home/doug/public_html/fw/scripts/start-vpad.sh
}
